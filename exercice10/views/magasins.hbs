<h1 class="title">Magasins</h1>
<div class="stores">
    {{#each magasins as |magasin|}}
    <div class="store store__hero">
        <div class="store__actions">
            <a href="/magasins/{{magasin.id}}/edit" class="store__action--edit">edit</a>
        </div>
        <a href="/magasins/{{magasin.slug}}">
            <div>
                <img src="/uploads/{{magasin.photo}}" alt="{{magasin.description}}" />
                <h2 class="title">{{magasin.name}}</h2>
                <p>
                    {{magasin.description}}
                </p>
            </div>

        </a>
    </div>
    {{/each}}

</div>